<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="556dp"
            android:layout_height="816dp" app:srcCompat="@drawable/lobbyback"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="265dp"
            android:layout_height="147dp" app:srcCompat="@drawable/create_but" android:id="@+id/create"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="652dp"/>
    <ImageButton
            android:layout_width="127dp"
            android:layout_height="67dp" app:srcCompat="@drawable/refresh_but" android:id="@+id/imageButton2"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="741dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="300dp"
            android:layout_marginStart="300dp"/>
    <ImageButton
            android:layout_width="96dp"
            android:layout_height="69dp" app:srcCompat="@drawable/backarrow_but" android:id="@+id/imageButton3"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="745dp"
            android:layout_marginEnd="300dp" android:layout_marginRight="300dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:id="@+id/scroll" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linear">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="109dp" android:gravity="center_vertical" android:id="@+id/row1">
                <ImageView
                        android:layout_width="170dp"
                        android:layout_height="68dp" app:srcCompat="@drawable/blank_but"
                        android:id="@+id/imageView7"/>
                <ImageButton
                        android:layout_width="111dp"
                        android:layout_height="68dp" app:srcCompat="@drawable/join_but"
                        android:id="@+id/imageButton" android:scaleType="fitCenter"
                        android:background="@android:color/transparent"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="68dp" app:srcCompat="@drawable/spectate_but"
                        android:id="@+id/imageButton4" android:background="@android:color/transparent"
                        android:scaleType="fitCenter"/>
            </TableRow>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>