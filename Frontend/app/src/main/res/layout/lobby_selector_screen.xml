<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/constraintLayout">

    <ImageView
            android:layout_width="556dp"
            android:layout_height="816dp" app:srcCompat="@drawable/lobbyback"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="233dp"
            android:layout_height="127dp" app:srcCompat="@drawable/create_but" android:id="@+id/create"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="656dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintVertical_bias="0.4"/>
    <ImageButton
            android:layout_width="103dp"
            android:layout_height="45dp" app:srcCompat="@drawable/refresh_but" android:id="@+id/refresh"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="312dp"
            android:layout_marginStart="312dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"/>
    <ImageButton
            android:layout_width="68dp"
            android:layout_height="44dp" app:srcCompat="@drawable/backarrow_but" android:id="@+id/back"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            android:layout_marginEnd="328dp" android:layout_marginRight="328dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"/>
    <ScrollView
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:id="@+id/scroll" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linear"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>