<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="556dp"
            android:layout_height="816dp" app:srcCompat="@drawable/background" android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/homeBackground_image"
            app:layout_constraintHorizontal_bias="0.503"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp" android:hint="new username"/>
    <ImageButton
            android:layout_width="62dp"
            android:layout_height="45dp" app:srcCompat="@drawable/backarrow_but" android:id="@+id/settings_back"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:contentDescription="@string/settings_button"/>
    <ImageButton
            android:layout_width="114dp"
            android:layout_height="101dp" app:srcCompat="@drawable/apply_button" android:id="@+id/apply_button"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="43dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="274dp"
            android:layout_marginStart="274dp" android:contentDescription="@string/apply_button"/>
    <TextView
            android:text="display name"
            android:layout_width="230dp"
            android:layout_height="79dp" android:id="@+id/textView2"
            android:fontFamily="@font/aqua" android:textColor="@color/white"
            android:textSize="25dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="330dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"/>
    <Switch
            android:layout_width="143dp"
            android:layout_height="97dp"
            android:fontFamily="@font/aqua"
            android:id="@+id/display_name_toggle" android:scaleX="2" android:scaleY="2"
            android:textScaleX="0" android:paddingRight="50dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="297dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="413dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="204dp"
            android:layout_marginStart="204dp" app:layout_constraintVertical_bias="0.0" android:checked="false"/>
    <ImageButton
            android:layout_width="277dp"
            android:layout_height="120dp" app:srcCompat="@drawable/logout_but" android:id="@+id/logout_but"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="616dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="71dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>