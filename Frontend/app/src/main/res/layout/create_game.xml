<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="427dp"
            android:layout_height="829dp" app:srcCompat="@drawable/background" android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/money_sign_home" android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="53dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.15"/>
    <EditText
            android:layout_width="279dp"
            android:layout_height="66dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/create_lobbyname"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="268dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" android:hint="enter lobby name"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="473dp"
            android:fontFamily="@font/aqua" android:textSize="14dp"/>
    <EditText
            android:layout_width="253dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/game_money"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="388dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp" android:hint="how much do you wanna bet?"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="359dp"
            android:fontFamily="@font/aqua" android:textSize="13dp"/>
    <ImageButton
            android:layout_width="249dp"
            android:layout_height="84dp" app:srcCompat="@drawable/create_game_but"
            android:id="@+id/createNewGame"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="670dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="53dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"/>
    <ImageButton
            android:layout_width="64dp"
            android:layout_height="44dp" app:srcCompat="@drawable/backarrow_but" android:id="@+id/back_create_game"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="747dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="max 12 characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:fontFamily="@font/aqua"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="457dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="334dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>