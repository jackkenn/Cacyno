<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:contentDescription="@string/PlayCreate_game_button">
    <ImageView
            android:layout_width="556dp"
            android:layout_height="816dp" app:srcCompat="@drawable/background" android:id="@+id/imageView3"
            android:contentDescription="@string/homeBackground_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cacyno_home" android:id="@+id/caCYno_home"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/caCYno_home"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/money_sign_home"
            android:id="@+id/money_sign_home"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/money_sign_home"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/currentuser"
            android:id="@+id/current_user_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/currentUser_image"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/settings_white" android:id="@+id/settings"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="323dp"
            android:layout_marginStart="323dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/settings_button"/>
    <ImageButton
            android:layout_width="286dp"
            android:layout_height="64dp" app:srcCompat="@drawable/leaderboard_but"
            android:id="@+id/leaderboard_button"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="618dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp" android:contentDescription="@string/leaderboard_button"/>
    <ImageButton
            android:layout_width="239dp"
            android:layout_height="76dp" app:srcCompat="@drawable/play_create_but"
            android:id="@+id/play_create_but"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="542dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp" android:translationX="1dp"
            android:contentDescription="@string/PlayCreate_game_button"/>
    <TextView
            android:layout_width="271dp"
            android:layout_height="109dp" android:id="@+id/moneyRequest"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="292dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp" android:textColor="@color/white"
            android:fontFamily="@font/aqua" android:textSize="75sp"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="43dp" android:id="@+id/currentUser"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="708dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="168dp" android:layout_marginStart="168dp"
            android:textColor="@color/white" android:fontFamily="@font/aqua"
            android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>